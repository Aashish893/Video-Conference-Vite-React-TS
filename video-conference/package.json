{
  "name": "video-conference",
  "private": true,
  "version": "0.0.0",
  "type": "commonjs",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "coverage": "vitest run --coverage",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "start:all": "concurrently --kill-others \"npm run start:peer\" \"npm run start:server\" \"npm run start\"",
    "start:peer": "cd ./peerJsServer && node peerserver.js",
    "start:server": "cd ./server && node server.js",
    "start": "vite",
    "dev:server": "npx tsc && node server.js",
    "e2e" : "cypress open --e2e --browser chrome"
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "autoprefixer": "^10.4.19",
    "classnames": "^2.5.1",
    "express": "^4.18.3",
    "http": "^0.0.1-security",
    "peerjs": "^1.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "socket.io": "^4.7.4",
    "styled-components": "^6.1.8",
    "uuid": "^9.0.1",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "concurrently": "^8.2.2",
    "cypress": "^13.13.2",
    "cypress-vite": "^1.5.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^24.1.1",
    "prettier": "3.2.5",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.1.4",
    "vitest": "^2.0.4"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
